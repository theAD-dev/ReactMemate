{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@app/*": [
                "./src/app/*"
            ],
            "@features/*": [
                "./src/features/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@entities/*": [
                "./src/entities/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ],
            "@components/*": [
                "./src/components/*"
            ]
        },
        "module": "esnext",
        "jsx": "react-jsx",
        "checkJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}